FROM node:20-alpine

WORKDIR /app

# Copier les fichiers backend (depuis la racine du projet)
COPY package*.json ./
RUN npm install --only=production

COPY server/ .

# Créer le répertoire pour la base de données
RUN mkdir -p /app/data

# Exposer le port
EXPOSE 5001

# Commande de démarrage
CMD ["node", "index.js"]
